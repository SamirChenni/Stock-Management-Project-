                    <Button Name="ClearButton" FontWeight="Bold" Height="30" Width="50" Content="Clear" HorizontalAlignment="Left" Margin="305,233,0,0" VerticalAlignment="Top" Style="{StaticResource ButtonRound}" MouseEnter="loginButton_MouseEnter" MouseLeave="loginButton_MouseLeave" Click="ClearButton_Click_1" Grid.ColumnSpan="2"/>
                    <Button x:Name="SavePWButton" FontWeight="Bold" Height="30" Width="90" Content="Save Password" HorizontalAlignment="Left" Margin="139,233,0,0" VerticalAlignment="Top" MouseEnter="loginButton_MouseEnter" MouseLeave="loginButton_MouseLeave" Style="{StaticResource ButtonRound}" Click="SavePWButton_Click" Grid.Column="1"/>
                </Grid>

            </Grid>
        </TabItem>
    </TabControl>

</Window>
