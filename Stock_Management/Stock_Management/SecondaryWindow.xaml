                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="100" Width="300" Margin="5" >
                        <Border BorderThickness="1" BorderBrush="Aqua" Margin="10" Background="White" Height="50" Width="280" CornerRadius="10">
                            <Grid Margin="3">
                                <TextBlock x:Name="textPassword" Text=" Password" Style="{StaticResource textHint}" Opacity="0.4" MouseDown="textPassword_MouseDown"></TextBlock>
